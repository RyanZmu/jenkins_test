pipeline {
    agent any

    stages {

        stage('Clone') {
            steps {
                echo 'Build Stage'
                git branch: 'main', url: 'git@github.com:RyanZmu/jenkins_test.git'
            }
        }
        stage('Set-up Node Environment') {
            steps {
                echo 'Test Stage'
                sh '''ansible-playbook /var/lib/jenkins/workspace/Pipeline_One/playbooks/node_setup.yml -vvv'''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy Stage'
            }
        }
    }
}
// This is just testing; will break out app deploy tasks from node_setup so we can have a seperate stage